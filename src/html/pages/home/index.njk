{% extends "base.njk" %}

{% block content %}
<!-- hero section -->
{% include 'partials/home-hero.njk' %}
<!-- end of hero section -->

<!-- mission section -->
<section class="tuf-section tuf-home-mission-section">
  <div class="tuf-home-mission">
    <h2>
      {{home.mission.title}}
    </h2>
    <p>
      {{home.mission.content}}
    </p>
  </div>
</section>
<!-- end of mission section -->

<section
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-clients-section">
  <h1 class="tuf-home-clients-title">
    {{home.clients.title}}
  </h1>
  <div class="tuf-home-clients-carousel">
    <div class="tuf-home-clients-list-bg"></div>
    <div class="tuf-home-clients-list">
      <div class="glide__track tuf-home-clients-list" data-glide-el="track">
        <ul class="glide__slides glide__track tuf-home-clients-list-items">
          {% for client in home.clients.items %}
          <li aria-label="{{client.name}}" class="glide__slide tuf-home-clients-list-item">
            <img src="{{client.image}}" alt="{{client.name}}" />
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>
{% endblock %}


{% block page_script %}
<script type="module" src="/assets/js/pages/home.js"></script>
{% endblock %}