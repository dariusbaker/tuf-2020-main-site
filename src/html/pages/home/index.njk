{% from "macros/button.njk" import button_link, button %}
{% from "macros/case-study-card.njk" import case_study_card %}

{% extends "base.njk" %}

{% block content %}
<!-- hero section -->
<section id="{{home.hero.slug}}"  class="tuf-section tuf-section--full-bleed">
  <img class="tuf-home-hero__bg" src="/assets/img/hero-hand.png" />
  <div class="tuf-home-hero">
    <h1 class="tuf-home-hero__header">
      {{home.hero.title|safe}}
    </h1>
    <div class="tuf-home-hero__footnote">
      <p>{{home.hero.footnote_1|safe}}</p>
      <p class="tuf-home-hero__footnote-highlight">{{home.hero.footnote_2|safe}}</p>
    </div>
  </div>
  <div class="tuf-home-hero__cta">
    {{
      button_link(
        classes="tuf-home-hero__cta__link",
        type="primary",
        label=home.hero.cta.label,
        href=home.hero.cta.href
      )
    }}
  </div>
</section>
<!-- end of hero section -->

<!-- mission section -->
<section id="{{home.mission.slug}}"  class="tuf-section tuf-home-mission-section">
  <div class="tuf-home-mission">
    <h2>
      {{home.mission.title|safe}}
    </h2>
    <p>
      {{home.mission.content|safe}}
    </p>
  </div>
</section>
<!-- end of mission section -->

<!-- clients section -->
<section
  id="{{home.clients.slug}}" 
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-clients-section">
  <h2 class="tuf-section-title tuf-home-clients__title">
    {{home.clients.title|safe}}
  </h2>
  <div class="tuf-home-clients__carousel">
    <div class="tuf-home-clients__list-bg"></div>
    <div class="tuf-home-clients__list">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides glide__track tuf-home-clients__list-items">
          {% for client in home.clients.items %}
          <li
            aria-label="{{client.name}}"
            class="glide__slide tuf-home-clients__list-item">
            <img src="{{client.image}}" alt="{{client.name}}" />
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- end of clients section -->

<!-- testimonials section -->
<section id="{{home.testimonials.slug}}" class="tuf-section tuf-home-testimonials-section">
  <div class="tuf-home-testimonials__list">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides glide__track tuf-home-testimonials__list-items">
        {% for testimonial in home.testimonials.items %}
        <li class="glide__slide tuf-home-testimonials__list-item">
          <blockquote>
            <p>
              {{testimonial.content|safe}}
            </p>
            <footer>
              â€” {{testimonial.name}}
            </footer>
          </blockquote>
        </li>
        {% endfor %}
      </ul>
    </div>

    <div class="glide__bullets tuf-home-testimonials__list-paginations" data-glide-el="controls[nav]">
      {% for testimonial in home.testimonials.items %}
      <button class="glide__bullet" data-glide-dir="={{loop.index0}}"></button>
      {% endfor %}
    </div>
  </div>
</section>
<!-- end of testimonials section -->


<!-- ask ava section -->
<section
  id="{{home.ask_ava.slug}}"
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-ask-ava">
  <h2 class="tuf-section-title tuf-home-ask-ava__title">
    {{home.ask_ava.title|safe}}
  </h2>
</section>
<!-- end of ask ava section -->

<!-- what we do section -->
<section
  id="{{home.what_we_do.slug}}"
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-clients-what-we-do-section">
  <h2 class="tuf-section-title tuf-home-what-we-do__title">
    {{home.what_we_do.title|safe}}
  </h2>
  <div class="tuf-home-what-we-do__list">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides glide__track tuf-home-what-we-do__list-items">
        {% for item in home.what_we_do.items %}
        <li class="glide__slide tuf-home-what-we-do__list-item">
          <a
            href="{{item.href}}"
            class="glide__slide tuf-home-what-we-do__list-item__card">
            <img
              src="{{item.image}}"
              alt="{{item.title}}"
              class="tuf-home-what-we-do__list-item__card__image" />
            <h3 class="tuf-home-what-we-do__list-item__card__title">
              {{item.title|safe}}
            </h3>
            <p class="tuf-home-what-we-do__list-item__card__content">
              {{item.content|safe}}
            </p>
            <small class="tuf-home-what-we-do__list-item__card__footnote">
              {{item.footnote|safe}}
            </small>
            <div class="tuf-home-what-we-do__list-item__card__link">
              <div class="tuf-home-what-we-do__list-item__card__link__icon">
                <svg role="img">
                  <use xlink:href="#icon-arrow-right" />
                </svg>
              </div>
              {{item.cta_label}}
            </div>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="glide__bullets tuf-home-what-we-do__list-paginations" data-glide-el="controls[nav]">
      {% for item in home.what_we_do.items %}
      <button class="glide__bullet" data-glide-dir="={{loop.index0}}"></button>
      {% endfor %}
    </div>
  </div>
  <div class="tuf-home-what-we-do__footnote">
    <div class="tuf-home-what-we-do__footnote__content">
      <h4 class="tuf-home-what-we-do__footnote__content__title">
        {{home.what_we_do.footnote.title}}
      </h4>
      <p>
        {{home.what_we_do.footnote.content}}
      </p>
    </div>
  </div>
  {{
    button_link(
      classes="tuf-home-what-we-do__cta",
      type="primary",
      label=home.what_we_do.cta.label,
      href=home.what_we_do.cta.href
    )
  }}
</section>
<!-- end of what we do section -->

<!-- case studies section -->
<section
  id="{{home.case_studies.slug}}"
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-case-studies">
  <h2 class="tuf-section-title tuf-home-case-studies__title">
    {{home.case_studies.title|safe}}
  </h2>
  <ul class="tuf-home-case-studies__list" aria-label="{{home.case_studies.title}}">
    {% for item in home.case_studies.items %}
    <li class="tuf-home-case-studies__list__item">
    {{
      case_study_card(
        classses = '',
        href = item.href,
        title = item.title,
        tags = item.tags,
        image = item.image
      )
    }}
    <li>
    {% endfor %}
  </ul>
  {{
    button_link(
      classes="tuf-home-case-studies__cta",
      type="primary",
      label=home.case_studies.cta.label,
      href=home.case_studies.cta.href
    )
  }}
</section>
<!-- end of case studies section -->

<!-- what do you seek section -->
<section
  id="{{home.what_do_you_seek.slug}}"
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-what-do-you-seek">
  <h2 class="tuf-section-title tuf-home-what-do-you-seek__title">
    {{home.what_do_you_seek.title|safe}}
  </h2>
  <div class="tuf-home-what-do-you-seek__content">
    <div class="tuf-home-what-do-you-seek__content__navigation">
      <label class="tuf-home-what-do-you-seek__content__navigation__label" for="what-do-you-seek-list">
        Pick one
        <svg role="img" class="tuf-home-what-do-you-seek__content__navigation__label__icon">
          <use xlink:href="#down" />
        </svg>
      </label>
      <div class="tuf-home-what-do-you-seek__content__navigation-wrapper" aria-hidden="false">
        <ul class="tuf-home-what-do-you-seek__content__navigation__items">
          {% for item in home.what_do_you_seek.items %}
          <li data-type="{{item.type}}" class="tuf-home-what-do-you-seek__content__navigation__item" role="button">
            {{item.type}}
          </li>
          {% endfor %}
        </ul>
        <p class="tuf-home-what-do-you-seek__content__navigation__footnote">
        Or simply
        </p>
        {{
          button_link(
            classes="tuf-home-what-do-you-seek__content__navigation__cta",
            type="primary",
            label=home.what_do_you_seek.cta.label,
            href=home.what_do_you_seek.cta.href
          )
        }}
      </div>
    </div>
  </div>
</section>
<!-- end of what do you seek section -->

<!-- instagram section -->
<section
  id="{{home.instagram.slug}}"
  class="tuf-section tuf-section--full-bleed tuf-section--no-padding tuf-home-instagram">
  <h2 class="tuf-section-title tuf-home-instagram__title">
    {{home.instagram.title|safe}}
  </h2>
  <ul class="tuf-home-instagram__list" aria-label="{{home.instagram.title}}">
    {% for item in home.instagram.items %}
    <li class="tuf-home-instagram__list__item">
      <a
        href="{{item.href}}"
        target="_blank"
        rel="noopener noreferrer">
        <img src="{{item.image}}" alt="{{item.alt}}" />
      </a>
    <li>
    {% endfor %}
  </ul>
</section>
<!-- end of instagram section -->

<!-- talk to us section -->
{% include 'partials/footer.njk' %}
<!-- end of talk to us section -->

{% endblock %}


{% block page_script %}
<script src="/assets/js/home.min.js"></script>
{% endblock %}